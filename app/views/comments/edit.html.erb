<div class="card text-center text-white bg-dark mb-3 mx-auto mt-5" style="width: 400px;">
    <div class="card-header">
      <div class="card-body">
    <h5 class="card-title"><%= @comment.author %></h5>
    <p><i><%= @comment.content %></i></p>

  </div>
</div>

<div class="container mt-3">
  <h1 class="pt_5">Edit ce commentaire !</h1>
  <%= form_for @comment do |f| %>
    <div class="form-group">
      <label>Auteur du Commentaire</label>
        <%= f.text_field :author, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Contenu du Commentaire </label>
        <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-dark text-light">Modifier le commentaire</button>
      <a href="<%= gossips_path %>" class="btn btn-default">Revenir Ã  l'accueil</button>
    </div>
  <% end %>
</div>